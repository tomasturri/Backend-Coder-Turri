{{>navbar}}
<div class="text-center" style="color: #fff;">
  <h2>Productos</h2>
</div>
<div class="product-list animate__animated animate__fadeInLeft">
  {{#each products}}
    <div class="product-item">
      <div class="text-center">
        <p class="product__title">{{this.title}}</p>
      </div>
      <p><b>Descripci√≥n:</b>{{this.description}}</p>
      <p><b>Precio:</b>{{this.price}}</p>
      <img src="{{this.thumbnail.[0]}}" alt="imagen-producto" width="150">

      <a href="http://localhost:8080/products/{{this.id}}" class="buy-button">comprar</a>
    </div>
  {{/each}}
</div>

<div class="text-center">
  {{#if hasPrevPage}}
      <a href="{{prevLink}}" class="navigate-button">Anterior</a>
  {{/if}}
  {{#if hasNextPage}}
      <a href="{{nextLink}}" class="navigate-button">Siguiente</a>
  {{/if}}
</div>



  <script src='js/navbar.js'></script>